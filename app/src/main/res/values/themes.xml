<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.KidsPrayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Edge-to-edge support -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Color customization -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorOutline">@color/outline</item>
        
        <!-- Text appearances -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.KidsPrayer.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.KidsPrayer.HeadlineMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.KidsPrayer.BodyLarge</item>
        
        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KidsPrayer.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KidsPrayer.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.KidsPrayer.LargeComponent</item>
        
        <!-- System bars customization -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="29">false</item>

        <!-- Bottom Sheet Dialog Theme -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.KidsPrayer.BottomSheetDialog</item>
        
        <!-- Animation transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        
        <!-- Enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Enable layout animation -->
        <item name="android:layoutAnimation">@anim/layout_animation_fall_down</item>
    </style>

    <!-- Lock Screen Theme -->
    <style name="Theme.KidsPrayer.NoActionBar" parent="Theme.KidsPrayer">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.KidsPrayer.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.KidsPrayer.Button.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.KidsPrayer.Button.Dialog.Outlined</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.KidsPrayer.Button.Dialog.Outlined</item>
        <item name="android:textColorPrimary">#2A1650</item>
        <item name="android:textColorSecondary">#5F4B8B</item>
        <item name="colorPrimary">#4E2C8C</item>
        <item name="colorAccent">#FF9D3F</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TextAppearance.KidsPrayer.Dialog.Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/TextAppearance.KidsPrayer.Dialog.Message</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Bottom Sheet Dialog Theme -->
    <style name="ThemeOverlay.KidsPrayer.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.KidsPrayer.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.KidsPrayer.BottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.KidsPrayer.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:lineHeight">40sp</item>
    </style>

    <style name="TextAppearance.KidsPrayer.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineHeight">32sp</item>
    </style>

    <style name="TextAppearance.KidsPrayer.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:lineHeight">24sp</item>
    </style>

    <!-- Card Title Text Style -->
    <style name="TextAppearance.KidsPrayer.CardTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.KidsPrayer.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.KidsPrayer.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.KidsPrayer.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Settings Button Style -->
    <style name="Widget.KidsPrayer.Button.Settings" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:typeface">sans</item>
    </style>

    <!-- NumPad Button Style -->
    <style name="Widget.KidsPrayer.Button.NumPad" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>
        <item name="iconTint">@color/white</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Theme.KidsPrayer.Settings" parent="Theme.KidsPrayer">
        <item name="colorPrimary">@color/settingsPrimary</item>
        <item name="colorPrimaryVariant">@color/settingsPrimaryDark</item>
        <item name="colorSecondary">@color/settingsAccent</item>
        <item name="android:statusBarColor">@color/settingsPrimaryDark</item>
    </style>

    <style name="Theme.KidsPrayer.LockScreen" parent="Theme.KidsPrayer">
        <item name="colorPrimary">@color/lockPrimary</item>
        <item name="colorPrimaryVariant">@color/lockPrimaryDark</item>
        <item name="colorSecondary">@color/lockAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.KidsPrayer.SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/background</item>
        
        <!-- Use the animated vector drawable as splash screen icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/animated_splash_logo</item>
        
        <!-- Set the theme used when the app starts after splash screen is gone -->
        <item name="postSplashScreenTheme">@style/Theme.KidsPrayer</item>
    </style>
</resources>
