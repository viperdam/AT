<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Enhanced Color System - Vibrant, Playful and Child-Friendly -->
    <!-- Primary Colors - Vibrant Blue Palette -->
    <color name="primary_lightest">#FFA6D4FA</color> <!-- Sky Blue Very Light -->
    <color name="primary_light">#FF64B5F6</color>  <!-- Sky Blue -->
    <color name="primary_main">#FF2196F3</color>  <!-- Bright Blue -->
    <color name="primary_dark">#FF1976D2</color>  <!-- Deep Blue -->
    <color name="primary_darkest">#FF0D47A1</color> <!-- Navy Blue -->
    
    <!-- Secondary Colors - Vibrant Orange/Red Palette -->
    <color name="secondary_lightest">#FFFFCCBC</color> <!-- Very Light Coral -->
    <color name="secondary_light">#FFFF8A65</color>  <!-- Light Coral -->
    <color name="secondary_main">#FFFF5722</color>  <!-- Vibrant Orange -->
    <color name="secondary_dark">#FFF4511E</color>  <!-- Deep Orange -->
    <color name="secondary_darkest">#FFD84315</color> <!-- Deep Orange Red -->
    
    <!-- Accent Colors - Playful Palette -->
    <color name="accent_yellow">#FFFFD54F</color>  <!-- Cheerful Yellow -->
    <color name="accent_yellow_dark">#FFFFC107</color> <!-- Golden Yellow -->
    <color name="accent_green">#FF81C784</color>   <!-- Soft Green -->
    <color name="accent_green_dark">#FF4CAF50</color>   <!-- Medium Green -->
    <color name="accent_purple">#FFBA68C8</color>  <!-- Gentle Purple -->
    <color name="accent_purple_dark">#FF9C27B0</color>  <!-- Medium Purple -->
    <color name="accent_pink">#FFF48FB1</color> <!-- Soft Pink -->
    <color name="accent_pink_dark">#FFE91E63</color> <!-- Medium Pink -->
    <color name="accent_teal">#FF80CBC4</color> <!-- Soft Teal -->
    <color name="accent_teal_dark">#FF009688</color> <!-- Medium Teal -->
    
    <!-- Surface Colors -->
    <color name="surface">#FFFFFF</color>
    <color name="surface_variant">#F5F5F5</color>
    <color name="on_surface">#212121</color>
    <color name="on_surface_variant">#757575</color>
    
    <!-- Background Colors -->
    <color name="background">#FFFAFAFA</color> <!-- Almost White -->
    <color name="background_light">#FFFFF8E1</color> <!-- Warm Light -->
    <color name="background_variant">#FFF5F5F5</color> <!-- Light Gray -->
    <color name="on_background">#FF212121</color> <!-- Dark Gray -->
    
    <!-- Text Colors - Removed duplicates -->
    <color name="text_tertiary">#FF9E9E9E</color>   <!-- Light Gray -->
    <color name="text_disabled">#FFBDBDBD</color>   <!-- Very Light Gray -->
    <color name="text_on_primary">#FFFFFFFF</color> <!-- White -->
    <color name="text_on_secondary">#FFFFFFFF</color> <!-- White -->
    
    <!-- State Colors -->
    <color name="success">#FF4CAF50</color> <!-- Green -->
    <color name="info">#FF2196F3</color> <!-- Blue -->
    <color name="warning">#FFFFC107</color> <!-- Amber -->
    <color name="error">#FFF44336</color> <!-- Red -->
    
    <!-- Enhanced Typography Styles - Removed duplicates -->
    <style name="TextAppearance.KidsPrayer.Display" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
    
    <!-- Adding missing SectionTitle style -->
    <style name="TextAppearance.KidsPrayer.SectionTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="TextAppearance.KidsPrayer.BodySmall" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>
    
    <!-- Text Appearances -->
    <style name="TextAppearance.KidsPrayer.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineHeight">32sp</item>
    </style>
    
    <!-- Enhanced Component Styles -->
    <!-- Primary Button Style -->
    <style name="Widget.KidsPrayer.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/TextAppearance.KidsPrayer.Body</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">4dp</item>
        <item name="backgroundTint">@color/primary_main</item>
        <item name="rippleColor">@color/primary_dark</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
    
    <!-- Secondary Button Style -->
    <style name="Widget.KidsPrayer.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.KidsPrayer.Body</item>
        <item name="android:textColor">@color/primary_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/primary_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
    
    <!-- New Game-Style Card -->
    <style name="Widget.KidsPrayer.Card.Game" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@animator/card_state_animator</item>
    </style>
    
    <!-- Adding missing Slider style -->
    <style name="Widget.KidsPrayer.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.KidsPrayer.Slider</item>
        <item name="labelStyle">@style/Widget.MaterialComponents.Tooltip</item>
        <item name="android:valueFrom">0.0</item>
        <item name="android:valueTo">100.0</item>
        <item name="tickVisible">false</item>
        <item name="haloColor">@color/primary_light</item>
        <item name="thumbColor">@color/primary_main</item>
        <item name="trackColorActive">@color/primary_main</item>
        <item name="trackColorInactive">@color/primary_lightest</item>
        <item name="trackHeight">8dp</item>
    </style>
    
    <style name="ThemeOverlay.KidsPrayer.Slider" parent="">
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <item name="colorOnSurface">@color/primary_dark</item>
    </style>
    
    <!-- Animation Durations -->
    <integer name="anim_duration_shortest">100</integer>
    <integer name="anim_duration_short">200</integer>
    <integer name="anim_duration_medium">300</integer>
    <integer name="anim_duration_long">400</integer>
    <integer name="anim_duration_longest">500</integer>
    
    <!-- Animation Interpolators -->
    <string name="interpolator_fast_out_slow_in">fastOutSlowIn</string>
    <string name="interpolator_linear_out_slow_in">linearOutSlowIn</string>
    <string name="interpolator_fast_out_linear_in">fastOutLinearIn</string>
    <string name="interpolator_bounce">overshoot</string>
    
    <!-- Spacing System -->
    <dimen name="spacing_xxs">2dp</dimen>
    <dimen name="spacing_xs">4dp</dimen>
    <dimen name="spacing_sm">8dp</dimen>
    <dimen name="spacing_md">16dp</dimen>
    <dimen name="spacing_lg">24dp</dimen>
    <dimen name="spacing_xl">32dp</dimen>
    <dimen name="spacing_xxl">48dp</dimen>
    
    <!-- Radius System -->
    <dimen name="radius_small">8dp</dimen>
    <dimen name="radius_medium">16dp</dimen>
    <dimen name="radius_large">24dp</dimen>
    <dimen name="radius_xlarge">32dp</dimen>
    
    <!-- Shadow System -->
    <dimen name="elevation_none">0dp</dimen>
    <dimen name="elevation_low">2dp</dimen>
    <dimen name="elevation_medium">4dp</dimen>
    <dimen name="elevation_high">8dp</dimen>
    <dimen name="elevation_xhigh">16dp</dimen>
    
    <!-- Button Styles -->
    <style name="Widget.KidsPrayer.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.KidsPrayer.Body</item>
        <item name="android:textColor">@color/primary_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="rippleColor">@color/primary_light</item>
        <item name="android:stateListAnimator">@animator/button_state_animator</item>
    </style>
</resources>