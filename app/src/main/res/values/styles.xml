<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application styles -->
    <style name="Widget.KidsPrayer.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Widget.KidsPrayer.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/button_primary</item>
        <item name="strokeColor">@color/button_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.KidsPrayer.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/colorAccent</item>
    </style>

    <style name="Widget.KidsPrayer.PrayerDisplay" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">32dp</item>
        <item name="cardElevation">12dp</item>
        <item name="contentPadding">24dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.KidsPrayer.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.KidsPrayer.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.KidsPrayer.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.KidsPrayer.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.KidsPrayer.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Interactive elements -->
    <style name="Widget.KidsPrayer.ProgressIndicator" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="indicatorColor">@color/colorAccent</item>
        <item name="trackColor">@color/light_gray</item>
        <item name="indicatorSize">64dp</item>
        <item name="trackThickness">6dp</item>
    </style>
    
    <!-- Dialog styles -->
    <style name="Widget.KidsPrayer.Button.Dialog" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">#4E2C8C</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="elevation">4dp</item>
    </style>
    
    <style name="Widget.KidsPrayer.Button.Dialog.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">#4E2C8C</item>
        <item name="strokeColor">#4E2C8C</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">#F8F8FF</item>
        <item name="android:minHeight">48dp</item>
    </style>
    
    <!-- Dialog Text Styles -->
    <style name="TextAppearance.KidsPrayer.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.KidsPrayer.Dialog.Message" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
