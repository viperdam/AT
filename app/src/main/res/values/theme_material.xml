<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.KidsPrayer.Material" parent="Theme.Material3.Light.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/primary_main</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorSecondary">@color/secondary_main</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorSecondaryContainer">@color/secondary_light</item>
        <item name="colorAccent">@color/accent_yellow</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_main</item>
        <item name="colorSurface">@color/background_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_disabled</item>
        
        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.KidsPrayer.Display</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.KidsPrayer.Title</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.KidsPrayer.Body</item>
        
        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.KidsPrayer.Button</item>
        <item name="materialCardViewStyle">@style/Widget.KidsPrayer.Card</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background_main</item>
        
        <!-- Animation -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>
    
    <!-- Dialog theme -->
    <style name="Theme.KidsPrayer.Material.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
    </style>
    
    <!-- Bottom sheet dialog theme -->
    <style name="Theme.KidsPrayer.Material.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.KidsPrayer.BottomSheet</item>
    </style>
    
    <style name="Widget.KidsPrayer.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="backgroundTint">@color/background_main</item>
    </style>
</resources>