<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/banner1">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1.0">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.92">
                        <androidx.appcompat.widget.Toolbar
                            android:theme="@style/ToolbarStyle"
                            android:id="@id/toolbar"
                            android:layout_width="fill_parent"
                            android:layout_height="?actionBarSize">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="18.0dip"
                                android:textColor="@color/grey"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@id/toolbar_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Athkar"
                                android:fontFamily="@font/biko_bold_700" />
                        </androidx.appcompat.widget.Toolbar>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="15.0dip"
                        android:paddingRight="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.08">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:gravity="center"
                                android:id="@id/llMorning"
                                android:background="@drawable/round_corner"
                                android:paddingTop="8.0dip"
                                android:paddingBottom="8.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:paddingStart="15.0dip"
                                android:paddingEnd="15.0dip">
                                <ImageView
                                    android:id="@id/ivMorningDot"
                                    android:layout_width="8.0dip"
                                    android:layout_height="8.0dip"
                                    android:src="@drawable/round"
                                    android:layout_marginEnd="10.0dip"
                                    app:tint="@color/white" />
                                <TextView
                                    android:textSize="18.0sp"
                                    android:textColor="@color/white"
                                    android:id="@id/tvMorning"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Morning"
                                    android:fontFamily="@font/biko_bold_700"
                                    android:textAlignment="center" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:id="@id/llEvening"
                                android:background="@drawable/whitebackground"
                                android:paddingTop="8.0dip"
                                android:paddingBottom="8.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:paddingStart="15.0dip"
                                android:paddingEnd="15.0dip">
                                <ImageView
                                    android:id="@id/ivEveningDot"
                                    android:visibility="gone"
                                    android:layout_width="8.0dip"
                                    android:layout_height="8.0dip"
                                    android:src="@drawable/round"
                                    android:layout_marginEnd="10.0dip"
                                    app:tint="@color/white" />
                                <TextView
                                    android:textSize="18.0sp"
                                    android:textColor="@color/green"
                                    android:id="@id/tvEvening"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Evening"
                                    android:fontFamily="@font/medium"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.viewpager.widget.ViewPager
                            android:id="@id/vpAthkar"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="15.0dip"
                            android:layout_marginBottom="30.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/banner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>