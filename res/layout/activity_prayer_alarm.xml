<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:background="@drawable/background_gradient2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:src="@mipmap/ic_launcher" />
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/round_corner_square_20"
            android:layout_width="280.0dip"
            android:layout_height="250.0dip"
            android:layout_marginTop="25.0dip"
            android:backgroundTint="@color/ltwhite">
            <TextView
                android:textSize="32.0dip"
                android:textColor="@color/grey"
                android:id="@id/tvPrayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fajr"
                android:fontFamily="@font/medium" />
            <TextView
                android:textSize="50.0dip"
                android:textColor="@color/grey"
                android:id="@id/tvPrayerTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.0dip"
                android:text="10:30 PM"
                android:fontFamily="@font/medium" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:id="@id/btnStop"
            android:background="@drawable/round_corner_square"
            android:padding="12.0dip"
            android:layout_width="150.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.0dip"
            android:backgroundTint="#fff3ce53">
            <TextView
                android:textColor="#ff444f50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:fontFamily="@font/biko_bold_700" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>