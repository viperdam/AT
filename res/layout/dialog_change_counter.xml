<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/round_corner_square_20"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white">
        <TextView
            android:textSize="18.0dip"
            android:textColor="@color/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Counter"
            android:fontFamily="@font/biko_bold_700" />
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/round_corner_square"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.0dip"
            android:backgroundTint="@color/ltwhite">
            <EditText
                android:textSize="14.0dip"
                android:textColor="@color/grey"
                android:id="@id/edCounter"
                android:background="@android:color/transparent"
                android:padding="15.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:inputType="number"
                android:fontFamily="@font/medium" />
            <TextView
                android:textSize="18.0dip"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tasbih Count(s)"
                android:fontFamily="@font/medium"
                android:layout_marginStart="5.0dip"
                android:layout_marginEnd="15.0dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25.0dip"
            android:weightSum="2.0">
            <LinearLayout
                android:gravity="end"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">
                <androidx.cardview.widget.CardView
                    android:id="@id/btnNo"
                    android:layout_width="90.0dip"
                    android:layout_height="40.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textSize="16.0dip"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:fontFamily="@font/medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@id/btnYes"
                    android:layout_width="90.0dip"
                    android:layout_height="40.0dip"
                    app:cardElevation="0.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textSize="16.0dip"
                            android:textColor="@color/grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ok"
                            android:fontFamily="@font/biko_bold_700" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>