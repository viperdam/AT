<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/banner1">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1.0">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.705">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:src="@drawable/tasbihbg"
                                    android:scaleType="centerCrop"
                                    android:layout_centerInParent="true" />
                                <androidx.appcompat.widget.Toolbar
                                    android:theme="@style/ToolbarStyle"
                                    android:id="@id/toolbar"
                                    android:layout_width="fill_parent"
                                    android:layout_height="?actionBarSize"
                                    android:layout_marginTop="35.0dip" />
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingBottom="15.0dip"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_below="@id/toolbar"
                                    android:paddingStart="15.0dip"
                                    android:paddingEnd="15.0dip">
                                    <TextView
                                        android:textSize="30.0dip"
                                        android:textColor="@color/grey"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Count the\nTasbih"
                                        android:fontFamily="@font/medium" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3">
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content">
                                    <View
                                        android:background="#fff7fff5"
                                        android:layout_width="fill_parent"
                                        android:layout_height="25.0dip" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="15.0dip"
                                    android:paddingEnd="15.0dip">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:background="@drawable/round_corner_square_20"
                                        android:padding="10.0dip"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/ltwhite">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content">
                                            <LinearLayout
                                                android:gravity="center"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content">
                                                <TextView
                                                    android:textSize="18.0dip"
                                                    android:id="@id/tvArabicName"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="اللَّهُمَّ افْتَحْ لِي أَبْوَابَ رَحْمَتِكَ"
                                                    android:fontFamily="@font/medium" />
                                            </LinearLayout>
                                            <LinearLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5.0dip">
                                                <View
                                                    android:background="#ffbebebe"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="1.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10.0dip">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content">
                                                <TextView
                                                    android:textSize="16.0dip"
                                                    android:textColor="@color/green"
                                                    android:id="@id/tvEnglishName"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Subhan Allah"
                                                    android:fontFamily="@font/medium"
                                                    android:textAlignment="center" />
                                            </LinearLayout>
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5.0dip">
                                                <TextView
                                                    android:textColor="@color/grey"
                                                    android:id="@id/tvEnglishMeaning"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Glory be to Allah"
                                                    android:fontFamily="@font/medium"
                                                    android:textAlignment="center" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10.0dip">
                                            <LinearLayout
                                                android:gravity="center_vertical"
                                                android:id="@id/btnDhikar"
                                                android:background="@drawable/round_corner_square_5"
                                                android:layout_width="wrap_content"
                                                android:layout_height="30.0dip"
                                                android:paddingStart="10.0dip"
                                                android:paddingEnd="10.0dip">
                                                <TextView
                                                    android:textColor="@color/white"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Change Dhikr"
                                                    android:layout_weight="1.0"
                                                    android:fontFamily="@font/medium" />
                                                <ImageView
                                                    android:layout_width="24.0dip"
                                                    android:layout_height="24.0dip"
                                                    android:src="@drawable/forward"
                                                    android:layout_marginStart="15.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip">
                            <LinearLayout
                                android:id="@id/btnReset"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="18.0dip"
                                    android:layout_height="18.0dip"
                                    android:src="@drawable/ic_reset" />
                                <TextView
                                    android:textColor="#ffd85151"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reset Count "
                                    android:fontFamily="@font/medium"
                                    android:textAlignment="center"
                                    android:layout_marginStart="5.0dip" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip">
                            <RelativeLayout
                                android:layout_width="150.0dip"
                                android:layout_height="150.0dip">
                                <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                                    android:id="@id/circular_progress"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_centerInParent="true"
                                    app:direction="clockwise"
                                    app:dotColor="@color/grey"
                                    app:progressColor="@color/grey"
                                    app:progressStrokeWidth="10.0dip"
                                    app:textColor="@color/grey"
                                    app:textSize="36.0dip" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="30.0dip"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        android:textColor="@color/green"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Loop : "
                                        android:fontFamily="@font/medium"
                                        android:textAlignment="center" />
                                    <TextView
                                        android:textColor="@color/green"
                                        android:id="@id/tvLoop"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0000"
                                        android:fontFamily="@font/medium"
                                        android:textAlignment="center" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip">
                            <LinearLayout
                                android:id="@id/btnCount"
                                android:background="@drawable/round_corner_square_5"
                                android:paddingTop="12.0dip"
                                android:paddingBottom="12.0dip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="30.0dip"
                                android:paddingEnd="30.0dip">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tap to Count +1"
                                    android:layout_weight="1.0"
                                    android:fontFamily="@font/medium" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip"
                            android:paddingStart="15.0dip"
                            android:paddingEnd="15.0dip">
                            <LinearLayout
                                android:background="@drawable/round_corner_square_20"
                                android:padding="12.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/ltwhite">
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0">
                                    <TextView
                                        android:textSize="16.0dip"
                                        android:textColor="@color/grey"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Change Tasbih Count"
                                        android:fontFamily="@font/medium" />
                                    <TextView
                                        android:textColor="@color/green"
                                        android:id="@id/tvTasbihCount"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3.0dip"
                                        android:text="Count : 50"
                                        android:fontFamily="@font/medium" />
                                </LinearLayout>
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="fill_parent">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:id="@id/btnChangeCounter"
                                        android:background="@drawable/round_corner_square_5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30.0dip"
                                        android:paddingStart="10.0dip"
                                        android:paddingEnd="10.0dip">
                                        <TextView
                                            android:textColor="@color/white"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Change Count"
                                            android:layout_weight="1.0"
                                            android:fontFamily="@font/medium" />
                                        <ImageView
                                            android:layout_width="24.0dip"
                                            android:layout_height="24.0dip"
                                            android:src="@drawable/forward"
                                            android:layout_marginStart="5.0dip" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/banner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>