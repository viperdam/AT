<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/round_corner_square"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:backgroundTint="@color/ltwhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="18.0sp"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Required Location On"
                android:fontFamily="@font/biko_bold_700" />
            <TextView
                android:textSize="15.0sp"
                android:textColor="@color/grey"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="This app required turn on location to get prayer time."
                android:fontFamily="@font/medium" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip">
            <RelativeLayout
                android:id="@id/btnOk"
                android:background="@drawable/round_corner_square"
                android:layout_width="180.0dip"
                android:layout_height="40.0dip">
                <TextView
                    android:textSize="14.0sp"
                    android:textColor="#ffffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3.0dip"
                    android:text="OK, Allow Permission"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/medium" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>