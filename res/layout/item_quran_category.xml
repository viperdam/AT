<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5.0dip"
    android:layout_marginBottom="5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="26.0dip"
            android:textColor="@color/grey"
            android:id="@id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:fontFamily="@font/medium" />
        <TextView
            android:textSize="18.0dip"
            android:textColor="@color/green"
            android:id="@id/tvArabicName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="فاتِحَةُ الكِتاب"
            android:fontFamily="@font/medium"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="5.0dip" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">
                <TextView
                    android:textSize="18.0dip"
                    android:textColor="@color/grey"
                    android:id="@id/tvArabicTranslation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fatihatu 'l-kitab"
                    android:fontFamily="@font/medium" />
                <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/green"
                    android:id="@id/tvEnglishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="The Opening of The Book"
                    android:fontFamily="@font/medium" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
                <ImageView
                    android:background="@drawable/round_border_square_green"
                    android:padding="2.0dip"
                    android:layout_width="28.0dip"
                    android:layout_height="28.0dip"
                    android:src="@drawable/forward"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/dgreen" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <View
                android:background="#ffbebebe"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>