<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/round_corner_square_20"
    android:padding="15.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5.0dip"
    android:layout_marginBottom="5.0dip"
    android:backgroundTint="@color/ltwhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@id/btnSelect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/ltwhite"
                    app:cardCornerRadius="5.0dip"
                    app:cardElevation="0.0dip"
                    app:strokeColor="@color/green"
                    app:strokeWidth="1.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:padding="10.0dip"
                        android:layout_width="130.0dip"
                        android:layout_height="fill_parent">
                        <TextView
                            android:textColor="@color/grey"
                            android:id="@id/tvSelect"
                            android:layout_width="74.0dip"
                            android:layout_height="wrap_content"
                            android:text="Select this"
                            android:layout_weight="1.0"
                            android:fontFamily="@font/medium" />
                        <ImageView
                            android:id="@id/ivSelect"
                            android:layout_width="18.0dip"
                            android:layout_height="18.0dip"
                            android:src="@drawable/round_border"
                            android:layout_marginStart="15.0dip" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <TextView
                android:textSize="18.0dip"
                android:id="@id/tvDhikrArabic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="اللَّهُمَّ افْتَحْ لِي أَبْوَابَ رَحْمَتِكَ"
                android:fontFamily="@font/medium"
                android:layout_marginStart="10.0dip" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">
            <View
                android:background="#ffbebebe"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="15.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/green"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Translation"
                android:fontFamily="@font/medium" />
            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/grey"
                android:id="@id/tvDhikrTranslation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="Subhan Allah"
                android:fontFamily="@font/medium" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip">
            <TextView
                android:textColor="@color/green"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="English Meaning"
                android:fontFamily="@font/medium" />
            <TextView
                android:textSize="16.0dip"
                android:textColor="@color/grey"
                android:id="@id/tvDhikrEnglishMeaning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3.0dip"
                android:text="Glory be to Allah"
                android:fontFamily="@font/medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>