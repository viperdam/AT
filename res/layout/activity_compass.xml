<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/banner1">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:id="@id/layoutContent"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1.0">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.92">
                        <androidx.appcompat.widget.Toolbar
                            android:theme="@style/ToolbarStyle"
                            android:id="@id/toolbar"
                            android:visibility="visible"
                            android:layout_width="fill_parent"
                            android:layout_height="?actionBarSize">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="18.0dip"
                                android:textColor="@color/grey"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Qibla Compass"
                                android:fontFamily="@font/biko_bold_700" />
                        </androidx.appcompat.widget.Toolbar>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="#ffffffff"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.08"
                        android:paddingStart="15.0dip"
                        android:paddingEnd="15.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:background="@drawable/round_corner_square_20"
                                android:padding="15.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/ltwhite">
                                <ImageView
                                    android:layout_width="36.0dip"
                                    android:layout_height="36.0dip"
                                    android:src="@drawable/ic_flat_surfaces" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15.0dip">
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content">
                                        <View
                                            android:background="@drawable/round"
                                            android:layout_width="10.0dip"
                                            android:layout_height="10.0dip"
                                            android:layout_marginEnd="10.0dip" />
                                        <TextView
                                            android:textColor="@color/grey"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Place your device on a flat surface"
                                            android:fontFamily="@font/medium" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5.0dip">
                                        <View
                                            android:background="@drawable/round"
                                            android:layout_width="10.0dip"
                                            android:layout_height="10.0dip"
                                            android:layout_marginEnd="10.0dip" />
                                        <TextView
                                            android:textColor="@color/grey"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:text="Then wait until qibla cursor is stable"
                                            android:fontFamily="@font/medium" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="10.0dip">
                                <LinearLayout
                                    android:gravity="center"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.3">
                                    <RelativeLayout
                                        android:id="@id/rel_layout"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintBottom_toTopOf="@id/heading">
                                        <ImageView
                                            android:id="@id/image_compass"
                                            android:layout_width="200.0dip"
                                            android:layout_height="200.0dip"
                                            android:src="@drawable/dial"
                                            android:layout_centerInParent="true" />
                                        <ImageView
                                            android:id="@id/image_cursor"
                                            android:layout_width="350.0dip"
                                            android:layout_height="350.0dip"
                                            android:src="@drawable/qibla"
                                            android:layout_alignTop="@id/image_compass"
                                            android:layout_centerInParent="true"
                                            android:rotation="0.0" />
                                    </RelativeLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="0.7">
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.6">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15.0dip">
                                            <TextView
                                                android:textSize="16.0dip"
                                                android:textColor="@color/grey"
                                                android:layout_gravity="center_horizontal"
                                                android:id="@id/heading"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:fontFamily="@font/medium" />
                                            <TextView
                                                android:textColor="@color/green"
                                                android:layout_gravity="center_horizontal"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5.0dip"
                                                android:text="Heading"
                                                android:fontFamily="@font/medium" />
                                        </LinearLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_weight="0.4">
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15.0dip">
                                            <LinearLayout
                                                android:gravity="center_vertical"
                                                android:id="@id/btnChangeLocation"
                                                android:background="@drawable/round_corner_square_5"
                                                android:paddingTop="5.0dip"
                                                android:paddingBottom="5.0dip"
                                                android:layout_width="180.0dip"
                                                android:layout_height="50.0dip"
                                                android:paddingStart="10.0dip"
                                                android:paddingEnd="10.0dip">
                                                <ImageView
                                                    android:layout_width="24.0dip"
                                                    android:layout_height="24.0dip"
                                                    android:src="@drawable/ic_location" />
                                                <TextView
                                                    android:textColor="@color/white"
                                                    android:id="@id/loc"
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="---"
                                                    android:layout_weight="1.0"
                                                    android:fontFamily="@font/medium"
                                                    android:textAlignment="center"
                                                    android:layout_marginStart="10.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/banner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>