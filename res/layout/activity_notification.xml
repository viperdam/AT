<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/banner1">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1.0">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.92">
                        <androidx.appcompat.widget.Toolbar
                            android:theme="@style/ToolbarStyle"
                            android:id="@id/toolbar"
                            android:layout_width="fill_parent"
                            android:layout_height="?actionBarSize">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="18.0dip"
                                android:textColor="@color/grey"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Notification Seeting"
                                android:fontFamily="@font/biko_bold_700" />
                        </androidx.appcompat.widget.Toolbar>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.08"
                        android:paddingStart="15.0dip"
                        android:paddingEnd="15.0dip">
                        <LinearLayout
                            android:orientation="vertical"
                            android:background="@drawable/round_corner_square_20"
                            android:padding="15.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/ltwhite">
                            <TextView
                                android:textColor="#ff717370"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="SELECT TIME" />
                            <androidx.cardview.widget.CardView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15.0dip"
                                app:cardCornerRadius="15.0dip"
                                app:cardElevation="0.0dip">
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content">
                                    <TimePicker
                                        android:id="@id/timePiker"
                                        android:layout_width="fill_parent"
                                        android:layout_height="380.0dip"
                                        android:headerBackground="@color/grey"
                                        android:numbersBackgroundColor="@color/ltwhite" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10.0dip">
                            <LinearLayout
                                android:background="@drawable/round_corner_square"
                                android:padding="15.0dip"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/ltwhite">
                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0">
                                    <TextView
                                        android:textSize="18.0dip"
                                        android:textColor="@color/grey"
                                        android:id="@id/tvTotalAssets"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Notification Time"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/medium" />
                                    <TextView
                                        android:textSize="18.0dip"
                                        android:textColor="@color/grey"
                                        android:id="@id/tvTime"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="00:00 AM"
                                        android:layout_weight="1.0"
                                        android:fontFamily="@font/biko_bold_700"
                                        android:textAlignment="textEnd" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center"
                                android:id="@id/btnSetTime"
                                android:background="@drawable/round_corner_square"
                                android:padding="12.0dip"
                                android:layout_width="150.0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10.0dip">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set Time"
                                    android:fontFamily="@font/biko_bold_700" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/banner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>