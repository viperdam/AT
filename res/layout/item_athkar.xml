<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/round_corner_square_20"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5.0dip"
    android:layout_marginBottom="5.0dip"
    android:backgroundTint="@color/ltwhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/llArabic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18.0dip"
                    android:textColor="@color/grey"
                    android:id="@id/tvAthkarArabic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/medium" />
                <View
                    android:background="#ffbebebe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5.0dip" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/llEnglish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">
                <TextView
                    android:textSize="16.0dip"
                    android:textColor="@color/grey"
                    android:id="@id/tvAthkarEnglish"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/medium" />
                <View
                    android:background="#ffbebebe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5.0dip" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@id/llTranslation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip">
                <TextView
                    android:textSize="18.0dip"
                    android:textColor="@color/grey"
                    android:id="@id/tvAthkarTranslation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:fontFamily="@font/medium" />
                <View
                    android:background="#ffbebebe"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginTop="5.0dip" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.4">
                <ImageView
                    android:id="@id/ivShare"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/ic_share" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2">
                <LinearLayout
                    android:gravity="center"
                    android:id="@id/btnAthkarReadTime"
                    android:background="@drawable/round_border_square_7"
                    android:padding="12.0dip"
                    android:layout_width="160.0dip"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/grey"
                        android:id="@id/tvCounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Counting : "
                        android:fontFamily="@font/medium" />
                    <TextView
                        android:textColor="@color/green"
                        android:id="@id/tvAthkarCounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/3"
                        android:fontFamily="@font/medium" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="end|center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.4">
                <TextView
                    android:textColor="@color/grey"
                    android:id="@id/tvAthkarCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111-111"
                    android:fontFamily="@font/medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>