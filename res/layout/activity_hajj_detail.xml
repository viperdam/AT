<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/banner1">
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1.0">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.92">
                        <androidx.appcompat.widget.Toolbar
                            android:theme="@style/ToolbarStyle"
                            android:id="@id/toolbar"
                            android:layout_width="fill_parent"
                            android:layout_height="?actionBarSize">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:textSize="18.0dip"
                                android:textColor="@color/grey"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:id="@id/toolbar_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="See More"
                                android:fontFamily="@font/biko_bold_700" />
                        </androidx.appcompat.widget.Toolbar>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="30.0dip"
                        android:layout_weight="0.08">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:backgroundTint="@color/ltwhite"
                                    app:cardCornerRadius="20.0dip"
                                    app:cardElevation="0.0dip">
                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent">
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:padding="15.0dip"
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content">
                                            <TextView
                                                android:textSize="20.0dip"
                                                android:textColor="@color/grey"
                                                android:id="@id/tvTitle"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="Day 4-6"
                                                android:fontFamily="@font/medium" />
                                            <TextView
                                                android:textColor="#ff737878"
                                                android:id="@id/tvDate"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5.0dip"
                                                android:text="Dhu,l Hulafah"
                                                android:fontFamily="@font/medium" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="200.0dip">
                                            <ImageView
                                                android:id="@id/ivThumbnail"
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent"
                                                android:scaleType="fitXY" />
                                        </LinearLayout>
                                        <LinearLayout
                                            android:gravity="center"
                                            android:orientation="vertical"
                                            android:padding="15.0dip"
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1.0">
                                                <TextView
                                                    android:textSize="20.0dip"
                                                    android:textColor="@color/green"
                                                    android:id="@id/tvSubTitle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Day 4-6"
                                                    android:fontFamily="@font/biko_bold_700" />
                                                <LinearLayout
                                                    android:layout_width="fill_parent"
                                                    android:layout_height="fill_parent"
                                                    android:layout_marginTop="10.0dip">
                                                    <androidx.recyclerview.widget.RecyclerView
                                                        android:id="@id/rvContent"
                                                        android:layout_width="fill_parent"
                                                        android:layout_height="fill_parent" />
                                                </LinearLayout>
                                            </LinearLayout>
                                            <LinearLayout
                                                android:gravity="center"
                                                android:id="@id/btnMap"
                                                android:background="@drawable/round_corner_square"
                                                android:padding="10.0dip"
                                                android:layout_width="150.0dip"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="15.0dip">
                                                <TextView
                                                    android:textColor="@color/white"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="View on Map"
                                                    android:fontFamily="@font/medium" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <RelativeLayout
        android:gravity="center"
        android:id="@id/banner1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@id/banner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>